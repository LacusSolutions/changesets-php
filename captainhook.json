{
  "pre-commit": {
    "enabled": false,
    "actions": [
      {
        "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting"
      },
      {
        "action": "composer fix"
      }
    ]
  },
  "commit-msg": {
    "enabled": true,
    "actions": [
